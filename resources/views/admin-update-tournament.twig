<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Grodno Tennis</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/js/bootstrap.min.js">
    <link rel="stylesheet" type="text/css" href="/css/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400&subset=latin,cyrillic' rel='stylesheet'
          type='text/css'>
</head>
<body>
<div class="container-fluid shadow indent-10-percents">
    <div class="row text-center">
        <div class="col-xs-8 text-left">
            <a href="{{ route('admin-index') }}" class="lt-primary-btn margin-for-btn-in">
                Назад
            </a>
        </div>
        <div class="col-xs-4">
            <div class="dropdown margin-for-btn-in">
                <button class="dropbtn">
                    <img class="size-of-btn-img" src="/img/benefit_3.png">
                    <span class="caret"></span>
                </button>
                <div class="dropdown-content text-center">
                    <a href="{{ route('main') }}">Главная</a>
                    <a href="{{ route('my-matches') }}">Личный кабинет</a>
                    <a href="{{ route('logout') }}"
                       onclick="event.preventDefault();
                       document.getElementById('logout-form').submit();">
                        Выход
                    </a>

                    <form id="logout-form" action="{{ route('logout') }}" method="POST" style="display: none;">
                        {{ csrf_field() }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row top-padding-1em">
        <div class="col-xs-12 results-league-table">
            <table width="100%" class="text-center">
                <thead>
                <tr>
                    <td>
                        <span class="hidden-xs all-players-table-style">Турнир</span>
                    </td>
                    <td>
                        <span class="hidden-xs all-players-table-style">Дата начала</span>
                    </td>
                    <td>
                        <span class="hidden-xs all-players-table-style">Дата окончания</span>
                    </td>
                    <td>
                        <span class="hidden-xs all-players-table-style">Время начала</span>
                    </td>
                    <td>
                        <span class="hidden-xs all-players-table-style">Адрес</span>
                    </td>
                    <td>
                        <span class="hidden-xs all-players-table-style">Игроков</span>
                    </td>
                    <td>
                    </td>
                </tr>
                </thead>
                <tbody>
                {% for tournament in tournaments %}
                    <form method="get" action="{{  route('admin-searched-tournament', tournament.id) }}">
                        <tr class="text-center">
                            <td class="top-padding-1em all-players-table-style">{{ tournament.name }}</td>
                            <td class="top-padding-1em all-players-table-style">{{ tournament.date_of_start }}</td>
                            <td class="top-padding-1em all-players-table-style">{{ tournament.date_of_finish }}</td>
                            <td class="top-padding-1em all-players-table-style">{{ tournament.time }}</td>
                            <td class="top-padding-1em all-players-table-style">{{ tournament.address }}</td>
                            <td class="top-padding-1em all-players-table-style">{{ tournament.max_players }}</td>
                            <td class="top-padding-1em hidden-xs all-players-table-style">
                                <button class="lt-primary-btn">Изменить</button>
                            </td>
                            <td class="top-padding-1em visible-xs all-players-table-style">
                                <button class="lt-primary-btn"><span class="caret"></span></button>
                            </td>
                        </tr>
                    </form>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
</body>
</html>
